<div class="well">
  <header>
    <p><%= link_to review.user.username, user_path(review.user) %> wrote a review for 
      <%= link_to review.business.name, business_path(review.business) %>
    <p>
      <% review.rating.times do %>
        <span class="glyphicon glyphicon-star"></span>
      <% end %> 
      <p><time class="small"> <%= format_datetime review.created_at %></time></p>
    </p>
  </header>
  <p>
    <%= review.body %>
  </p>
</div>